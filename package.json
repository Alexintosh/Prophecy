{
  "name": "prophecy",
  "version": "0.0.1",
  "description": "The first open-source mobile wallet for the NEO blockchain.",
  "main": "src/app.js",
  "scripts": {
    "start": "webpack-dev-server --open",
    "setup": "node scripts/setup.js",
    "build": "webpack && cordova build",
    "run-android": "webpack && cordova run android",
    "resources": "splash-n-icons generate",
    "preview-theme": "cd node_modules/onsenui/css-components-src/src && gulp serve",
    "after_install": "cd node_modules/onsenui/css-components-src/src && yarn install --pure-lockfile",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix --verbose | snazzy",
    "validate": "npm-run-all --parallel test lint:fix",
    "precommit": "npm run validate",
    "watch": "webpack --progress --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alexintosh/Ockham.git"
  },
  "keywords": [
    "neo-blockchain",
    "neo",
    "ockham",
    "cordova",
    "react",
    "mobile"
  ],
  "author": "Alessio Delmonti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alexintosh/Prophecy/issues"
  },
  "homepage": "https://github.com/Alexintosh/Prophecy#readme",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.4",
    "fs-extra": "^4.0.1",
    "html-webpack-plugin": "^2.30.1",
    "lodash": "^4.17.4",
    "neon-js": "https://github.com/Alexintosh/neon-js",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-spinkit": "^3.0.0",
    "recharts": "^1.0.0-alpha.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "splash-n-icons": "^0.2.2",
    "style-loader": "^0.18.2",
    "styled-components": "^2.1.2",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "file-loader": "^0.11.2",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "onsenui": "^2.5.2",
    "react-onsenui": "^1.5.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  }
}
